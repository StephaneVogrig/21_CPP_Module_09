NAME		?=	program

# sources ---------------------------------------------------------------------#

SRC 		?=	main.cpp

# objects ---------------------------------------------------------------------#

OBJ_DIR		:=	.build/
OBJ			:=	$(SRC:%.cpp=$(OBJ_DIR)%.o)

DEPS		:=	$(OBJ:.o=.d)

# compilation -----------------------------------------------------------------#

CXX			:=	c++
CXXFLAGS	:=	-Wall -Wextra -Werror -std=c++98 -g

#------------------------------------------------------------------------------#
# rules                                                                        #
#------------------------------------------------------------------------------#

all: $(NAME)

clean:
	@rm -rf $(OBJ_DIR)

fclean: clean
	@rm -rf $(NAME)

re: fclean all

test:
	@$(MAKE) -j all --no-print-directory
	./$(NAME)
	@rm $(NAME)

#------------------------------------------------------------------------------#
# compilation                                                                  #
#------------------------------------------------------------------------------#

$(OBJ_DIR)%.o: %.cpp
	@mkdir -p $(dir $@)
	@$(CXX) $(CXXFLAGS) -MMD -c $< -o $@
	@echo "compiled $<"

-include $(DEPS)

#------------------------------------------------------------------------------#
# linkage                                                                      #
#------------------------------------------------------------------------------#

$(NAME): $(OBJ)
	@$(CXX) $(OBJ) -o $(NAME)
	@echo "created $(NAME)"

#------------------------------------------------------------------------------#
# specifications                                                               #
#------------------------------------------------------------------------------#

.PHONY: all \
		clean \
		fclean \
		re
